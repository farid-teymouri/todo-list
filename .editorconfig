# EditorConfig helps developers define and maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# HTML, XML, Vue
[*.{html,xml,vue}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.yml]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Git configuration
[.gitignore]
indent_size = 2